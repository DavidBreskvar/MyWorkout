<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/commentsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="comments go here"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <fragment
        android:id="@+id/fragment1"
        android:name="dbug.myworkout.app.TimerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/timer_layout" />

    <TextView
        android:id="@+id/currentExerciseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current exercise: "
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/nextExerciseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next exercise:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ExpandableListView
        android:id="@+id/workoutListExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ExpandableListView>

</LinearLayout>